# Production Environment Variables
# Copy this to .env and update with your production values

NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/slugstop

# Session Secret (Generate a strong random string for production)
SESSION_SECRET=your-super-secure-session-secret-here

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://slugstop.ucsc.edu,https://www.slugstop.ucsc.edu

# Port Configuration
PORT=3000

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# JWT Secret for admin/driver authentication
JWT_SECRET=your-jwt-secret-here
